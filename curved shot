-- LocalScript placed in StarterPlayerScripts or StarterCharacterScripts

local UserInputService = game:GetService("UserInputService")
local wallbangEnabled = false  -- Initially disabled

-- Function to toggle wallbang
local function toggleWallbang()
    wallbangEnabled = not wallbangEnabled  -- Toggle between true and false

    if wallbangEnabled then
        print("Wallbang Enabled")
        -- Code to enable wallbang (allow shooting through walls)
        -- You can modify projectiles, hit detection, or other relevant scripts here
    else
        print("Wallbang Disabled")
        -- Code to disable wallbang (restore normal behavior)
    end
end

-- Listen for "C" key press
UserInputService.InputBegan:Connect(function(input, gameProcessed)
    if not gameProcessed then  -- Ensure player input is not from UI
        if input.KeyCode == Enum.KeyCode.C then
            toggleWallbang()
        end
    end
end)
